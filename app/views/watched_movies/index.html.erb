<p id="notice"><%= notice %></p>

<h1>Watched Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watched_movies.each do |watched_movie| %>
      <tr>
          <td><%= watched_movie.movie.title_ja %></td>
          <td><%= watched_movie.movie.director.name_ja %></td>
          <td><%= watched_movie.watched_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Watched Movie', new_watched_movie_path %>
