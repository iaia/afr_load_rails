<p id="notice"><%= notice %></p>

<h1>Watched Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watched_movies.each do |watched_movie| %>
      <tr>
        <td><%= link_to 'Show', watched_movie %></td>
        <td><%= link_to 'Edit', edit_watched_movie_path(watched_movie) %></td>
        <td><%= link_to 'Destroy', watched_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Watched Movie', new_watched_movie_path %>
