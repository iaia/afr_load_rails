          <i class="glyphicon glyphicon-list"></i>
        <% end %>
        <ul class="dropdown-menu">
          <% if @current_user %>
            <li><%= link_to "Settings", edit_user_path(@current_user) %></li>
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li><%= link_to "Login or Sign in", login_path %></li>
