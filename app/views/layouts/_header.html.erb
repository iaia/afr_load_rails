  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "AfrLoad", root_path, class: "navbar-brand" %>
  </div>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
    <% active = controller.controller_name %>
    <ul class="nav navbar-nav">
      <li class="<%= "active" if active == "movies" %>"><%= link_to "Movies", movies_path %></li>
      <li class="<%= "active" if active == "watched_tv_programs" %>"><%= link_to "WatchedTvPrograms", watched_tv_programs_path %></li>
