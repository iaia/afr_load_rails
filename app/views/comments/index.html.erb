<div class="comments" style="width:50%; float:left; margin-left: 15px;">
<ul class="list-group">
  <% @comments.each do |comment| %>
    <li class="list-group-item" style="">
      <p class="text-muted" style="float: left;">@<%= comment.user_name %></p>
      <p style="text-align: right">
      <%= link_to comment.commented_time,
        "https://twitter.com/#{comment.user_name}/status/#{comment.comment_id_on_provider}" %>
    </p>
    <p class=""><%= comment.body%></p>
    </li>
  <% end %>
</ul>
</div>

<div class="comments-status" style="float:clear; left:60%; position:fixed; z-index:1; padding:10px; height: 300px;">
  <h2><%= @tv.title %></h2>
  総コメント数: <%= @comments.count %>
</div>

