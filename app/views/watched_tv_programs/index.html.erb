<p id="notice"><%= notice %></p>

<h1>視聴済みTV</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watched_tv_programs.each do |watched_tv| %>
      <tr>
          <td><%= link_to watched_tv.tv_program.title_ja, movie_path(watched_tv.tv_program.movie) %></td>
          <td><%= watched_tv.tv_program.movie.director.name_ja %></td>
          <td><%= watched_tv.watched_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
