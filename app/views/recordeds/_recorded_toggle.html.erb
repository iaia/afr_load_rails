<% if recorded.removed %>
    <%= form_for(recorded, remote: true, :authenticity_token => true) do |f| %>
        <%= f.hidden_field :removed, value: false %>
        <%= f.submit "unremoved", class: "btn btn-secondary btn-xs" %>
    <% end %>
<% elsif recorded.recorded %>
    <%= form_for(recorded, remote: true, :authenticity_token => true) do |f| %>
        <%= f.hidden_field :removed, value: true %>
        <%= f.submit "remove", class: "btn btn-warning btn-xs" %>
    <% end %>
<% else %>
    <%= form_for(recorded, remote: true, :authenticity_token => true) do |f| %>
        <%= f.hidden_field :recorded, value: true %>
        <%= f.submit "record", class: "btn btn-info btn-xs" %>
    <% end %>
<% end %>
