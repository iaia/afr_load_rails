<table class="table">
<thead>
  <tr>
    <th>邦題</th>
    <th>原題</th>
    <th>監督</th>
    <th>主演</th>
  </tr>
</thead>


<tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title_ja, movie %></td>
      <td><%= movie.title %></td>
      <td><%= movie.director.name_ja %></td>
      <td><%= movie.actors.first.name_ja %></td>
    </tr>
  <% end %>
</tbody>

</table>
