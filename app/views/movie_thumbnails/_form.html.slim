= form_for(movie_thumbnail) do |f|
  - if movie_thumbnail.errors.any?
    #error_explanation
      h2
        = pluralize(movie_thumbnail.errors.count, "error")
        |  prohibited this movie_thumbnail from being saved:
      ul
        - movie_thumbnail.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :movie_id
    = f.number_field :movie_id
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :file_size
    = f.number_field :file_size
  .field
    = f.label :caption
    = f.text_field :caption
  .field
    = f.label :view_status
    = f.check_box :view_status
  .field
    = f.label :status
    = f.check_box :status
  .field
    = f.label :removed
    = f.check_box :removed
  .actions
    = f.submit
